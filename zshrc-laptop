
# Turn on "Uniqueness" for path, so we don't add directories
# multiple times to it.
typeset -U path

# Smart autocomplete, per program
autoload -U compinit
compinit

# Color ls output
export CLICOLOR="True"

export CTS_DATA_DIR='/Users/ctslater/Data'
export LSD_DB='/Users/ctslater/lsd_db'

# Cloudy
export CLOUDY_DATA_PATH="/Users/ctslater/c08.00/data"
path=(/Users/ctslater/c08.00/source $path)

# Path to macports. Need it first, so it overrides default versions
path=(/opt/local/bin $path)

path=($HOME/bin $path)

# Python
export PYTHONSTARTUP='/Users/ctslater/.pythonstartup'

# Ruby
export GEM_HOME="$HOME/gems"
path=($GEM_HOME/bin $path)

#
# Aliases/Functions
#
function sgr_get { scp aida41217:/disk5/ctslater/Sgr/$1 . }
function sgr_put { scp $1 aida41217:/disk5/ctslater/Sgr/ }
function lsgit { find -s . -maxdepth 2 -name .git | cut -d '/' -f 2 }


ZSH=$HOME/.oh-my-zsh

ZSH_THEME="cslater"
plugins=(git)
export DISABLE_AUTO_UPDATE=true
source $ZSH/oh-my-zsh.sh
unsetopt correct_all
setopt correct
